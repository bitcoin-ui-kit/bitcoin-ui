{
  "name": "bitcoin-ui",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
  "description": "Headless, accessible React component library for Bitcoin applications",
  "author": "Bitcoin UI Kit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitcoin-ui-kit/bitcoin-ui"
  },
  "keywords": [
    "react",
    "components",
    "bitcoin",
    "accessibility",
    "headless",
    "ui",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "!src/**/*.test.*",
    "!src/**/__tests__"
  ],
  "sideEffects": false,
  "devEngines": {
    "packageManager": {
      "name": "pnpm",
      "version": "10",
      "onFail": "warn"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:a11y": "jest --testPathPattern=a11y",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "size": "size-limit",
    "prepare": "husky",
    "prepublishOnly": "pnpm build && pnpm test && pnpm lint:check && pnpm typecheck",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@ilyasemenov/eslint-config": "^1.4.1",
    "@jest/globals": "^29.7.0",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-axe": "^9.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "qrcode.react": "^4.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "size-limit": "^11.1.6",
    "ts-jest": "^29.2.5",
    "tsconfig-vite-node": "^1.1.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vite-node": "^3.2.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.2"
  }
}